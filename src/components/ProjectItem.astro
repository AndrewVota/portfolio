---
const { title } = Astro.props;
const { description } = Astro.props;
const { keywords } = Astro.props;
const { link } = Astro.props;
---

<a href={link} target="_blank">
	<div
		class="flex flex-col w-full section-padding gap-2 border-rd-2 hover:bg-white"
	>
		<h2>{title}</h2>
		<p class="text-text-color-unfocused">{description}</p>
		<div class="flex gap-4">
			{
				keywords.map((keyword: string) => (
					<span class="subtext text-text-color-unfocused">
						{keyword}
					</span>
				))
			}
		</div>
	</div>
</a>
