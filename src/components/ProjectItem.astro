---
const { title } = Astro.props;
const { description } = Astro.props;
const { keywords } = Astro.props;
const { link } = Astro.props;
const { newTab = true } = Astro.props;
---

<a href={link} target=`${newTab ? "_blank" : "_self"}`>
	<div
		class="flex flex-col w-full section-padding gap-2 border-rd-2 hover:bg-white"
	>
		<h2>{title}</h2>
		<p class="text-text-color-unfocused">{description}</p>
		<div class="flex flex-wrap gap-4">
			{
				keywords.map((keyword: string) => (
					<span class="text-nowrap subtext text-text-color-unfocused">
						{keyword}
					</span>
				))
			}
		</div>
	</div>
</a>
